# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf diff=python
requirements*.txt text eol=lf
setup.py text eol=lf
Pipfile text eol=lf
Pipfile.lock text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
docs/** text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.toml text eol=lf
.env text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary

# Test files
test_*.py text eol=lf diff=python
*_test.py text eol=lf diff=python
conftest.py text eol=lf
